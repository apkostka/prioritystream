<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li style="list-style:none;">
      <div style="height:20px;width:20px;display:inline-block;position:relative;top:5px;margin-right:5px;background-color:#<%= user.color %>;"></div><%= link_to user.name, user %>
    </li>
  <% end %>
</ul>