<% provide(:title, 'All users') %>
<h2 style="display:inline-block;position:relative;top:3px;">All users</h2>
<% if current_user.admin? %>
&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to "New User", '/users/new' %>
<% end %>
<br />
<hr />

<ul class="users">
  <% @users.each do |user| %>
    <li style="list-style:none;">
      <div style="height:20px;width:20px;display:inline-block;position:relative;top:5px;margin-right:5px;background-color:<%= user.color %>;"></div><%= link_to user.name, user %>
    </li>
  <% end %>
</ul>